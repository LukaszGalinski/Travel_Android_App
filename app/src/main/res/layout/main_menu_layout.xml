<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerBar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">
    <include layout="@layout/content_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
   <!-- <TextView
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="Wybierz kategorię"
        android:textColor="@color/cardview_light_background"
        android:fontFamily="@font/bahnschrift"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        />
        -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">
                //table [0,0]
            <FrameLayout
                android:background="#25000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                    >

                    <ImageButton
                        android:id="@+id/relaks"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/kreglebig"
                        android:background="#00000000"
                        android:adjustViewBounds="true"
                        android:scaleType="center"
                        android:scaleX="1.1"
                        android:scaleY="1.1"
                        android:onClick="ChangeIntent">
                    </ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="bottom"
                    android:text="Relaks"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20sp"/>
            </FrameLayout>
            //table [0,1]
            <FrameLayout
                android:background="#50000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="4dp"
                >

                <ImageButton
                    android:id="@+id/restauracje"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/nozbig"
                    android:background="#00000000"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:scaleX="1.1"
                    android:scaleY="1.1"
                    android:paddingBottom="20dp"
                    >
                </ImageButton>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Gastronomia"
                    android:gravity="bottom"
                    android:textSize="20sp"
                    android:textColor="@color/cardview_light_background"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    >
                </TextView>
            </FrameLayout>
            </TableRow>
            <TableRow>
            //table [1,1]
            <FrameLayout
                android:background="#50000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="4dp"
                >

                <ImageButton
                    android:id="@+id/hotele"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/lozkobig"
                    android:background="#00000000"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:scaleX="1.1"
                    android:scaleY="1.1"
                    android:paddingBottom="19dp"
                    >
                </ImageButton>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Nocleg"
                    android:gravity="bottom"
                    android:textSize="20sp"
                    android:textColor="@color/cardview_light_background"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    >
                </TextView>
            </FrameLayout>
                <FrameLayout
                    android:background="#50000000"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="3dp"
                    >

                    <ImageButton
                        android:id="@+id/atrakcje"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/castle"
                        android:background="#00000000"
                        android:adjustViewBounds="true"
                        android:scaleType="center"
                        android:scaleX="0.8"
                        android:scaleY=".8"
                        android:paddingBottom="20dp"
                        >
                    </ImageButton>
                    <TextView
                        android:id="@+id/atraction_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Atrakcje"
                        android:gravity="bottom"
                        android:textSize="20sp"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        >
                    </TextView>
                </FrameLayout>
            </TableRow>
            <TableRow>
                //table [1,1]
                <FrameLayout
                    android:background="#50000000"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="4dp"
                    >

                    <ImageButton
                        android:id="@+id/szpitale"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/hospital"
                        android:background="#00000000"
                        android:adjustViewBounds="true"
                        android:scaleType="center"
                        android:scaleX="1.1"
                        android:scaleY="1.1"
                        android:paddingBottom="4dp"
                        >
                    </ImageButton>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Służba Zdrowia"
                        android:gravity="bottom"
                        android:textSize="20sp"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        >
                    </TextView>
                </FrameLayout>
                <FrameLayout
                    android:background="#50000000"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="3dp"
                    >

                    <ImageButton
                        android:id="@+id/universytety"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/university"
                        android:background="#00000000"
                        android:adjustViewBounds="true"
                        android:scaleType="center"
                        android:scaleX="1.3"
                        android:scaleY="1.3"
                        >
                    </ImageButton>
                    <TextView
                        android:id="@+id/universe_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Uniwersytety"
                        android:gravity="bottom"
                        android:textSize="20sp"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        >
                    </TextView>
                </FrameLayout>
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/searchAround"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="#890130"
            android:onClick="search"
            android:contentDescription="Wyszukaj"
            android:text="Wyszukaj w okolicy"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        style="@style/DrawerBar"
        app:headerLayout="@layout/navbar_header"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        app:menu="@menu/drawermenu"
        android:background="@color/colorPrimaryDark"
        app:itemTextColor="@color/white"
        app:itemTextAppearance="@style/DrawerBar"
        app:itemIconTint="@color/white"
        android:layout_gravity="start"
        >

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>