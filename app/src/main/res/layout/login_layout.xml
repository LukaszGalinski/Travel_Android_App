<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.LoginActivity">
    <include layout="@layout/content_main" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/univercity" />

     <!--   <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-25dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/app_name"
            android:textSize="25sp"
            android:textColor="@color/white"/>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:background="#50000000"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/loginicon"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:contentDescription="@string/usericon"
            />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:background="#50000000"
                android:fontFamily="@font/bahnschrift"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="@android:color/background_light"
                android:textColor="@android:color/background_light"
                android:cursorVisible="true"
                android:textCursorDrawable="@color/cursorColor"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:background="#50000000"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:src="@drawable/passwordicon" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="#50000000"
                android:fontFamily="@font/bahnschrift"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:cursorVisible="true"
                android:textCursorDrawable="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/bahnschrift"
            android:text="@string/forgot_your_password"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="30dp"
            android:background="#890130"
            android:contentDescription="@string/login"
            android:text="@string/login"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/goRegisterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/bahnschrift"
            android:onClick="goToTheRegisterIntent"
            android:text="@string/dont_have_an_account"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loginvia"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:fontFamily="@font/bahnschrift"
            android:layout_marginTop="15dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <FrameLayout
                android:layout_below="@+id/no_network_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.gms.common.SignInButton
                android:id="@+id/googleBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:buttonSize="icon_only">

                <ImageView android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/google"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"/>
            </com.google.android.gms.common.SignInButton>

            </FrameLayout>

            //facebook button
            <FrameLayout
                android:layout_below="@+id/no_network_bar"
                android:id="@+id/FrameLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/facebook_login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/customFbButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#00000000"
                    android:src="@drawable/facebook"
                    android:onClick="reDesignFbButton" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>